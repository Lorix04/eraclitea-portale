# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/portale_formazione?schema=public"

# ===========================================
# NEXTAUTH
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-min-32-chars-here"

# ===========================================
# SMTP EMAIL
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Portale Formazione <noreply@enteformazione.it>"

# ===========================================
# FILE STORAGE
# ===========================================
FILE_STORAGE_PATH="./storage"

# ===========================================
# CRON JOBS
# ===========================================
CRON_API_KEY="your-cron-api-key"

# ===========================================
# MONITORING (Opzionale)
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# ===========================================
# RATE LIMITING - UPSTASH REDIS (Opzionale)
# ===========================================
# Se non configurato, usa rate limiting in-memory (non persistente tra restart)
# Per produzione con pi√π istanze, configura Upstash Redis
UPSTASH_REDIS_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_TOKEN="your-upstash-token"
